{% if section.image %}
        <div class="image-container  basic-brdr-rds" >
            {% set image = get_image(section.image) %}

            <picture class="display ">
                <source
                data-srcset="{{image.src('large')}}"
                media="(max-width: 767px)" />
                <img data-src="{{image.src}}" src="{{image.src('medium')}}" alt="{{image.alt}}" class="display lazyload " width="{{image.width}}" height="{{image.height}}">
            </picture>
    </div>
{% endif %}