{% if section.gallery %}
    <div class="img-columns dis-flex  jus-space-between">
            {% for image in section.gallery %}
            <div class="simple-img image-container  basic-brdr-rds" >
                {% set image = get_image(image) %}

                <picture class="display ">
                    <source
                    data-srcset="{{image.src('large')}}"
                    media="(max-width: 47.9375rem)" />
                    <img data-src="{{image.src('large')}}" src="{{image.src('medium')}}" alt="{{image.alt}}" class="lazyload display " width="{{image.width}}" height="{{image.height}}">
                </picture>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% if section.texts %}
    {% set counter = 0 %}
    <div class="texts-columns ">
            {% for item in section.texts %}
            {% set class ='' %}

            {% if counter == 0 %}
                {% set class = 'foc ' %}
            {% else %}
                {% set class = 'ft ' %}
            {% endif %}

            <div class="{{class}} default-text fs-20" >
                {{ item.text }}
            </div>

            {% set counter = counter + 1 %}
            {% endfor %}
    </div>
{% endif %}