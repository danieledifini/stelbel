
<a class="standard-item" href="{{item.cta['url']}}" target="{{item.cta['target']}}" title="{{item.title}}">
    <article  >
        {% if item.image %}
            <div class="image-container img-square pos-rel">
                <picture  class="img-cover">
                {% set image = get_image(item.image) %}
                    <source
                    data-srcset="{{image.src('large')}}"
                    media="(max-width: 767px)" />
                    <img data-src="{{image.src('large')}}" src="{{image.src('medium')}}" alt="{{image.alt}}"   class="lazyload" width="{{image.src('large').width}}" height="{{image.src('large').height}}" />
                </picture> 
            </div>
        {% endif %}
        
        
        {% if item.title or item.text or item.cta %}
            <div class="text-container">
                
                {% if item.title %}
                    <h3 class="foc fs-32">{{item.title}}</h3>
                {% endif %}
                {% if item.text %}
                    <div class="ft fs-18 ">
                        <p>{{item.text}}</p>
                    </div>
                {% endif %}
                
                {% if item.cta %}
                    <div class="ctas-container  ">
                        <button  class="standard-btn foc fs-18 fake-btn transition default-btn"  type="button"   >
                            {{item.cta['title']}}
                        </button>
                    </div>
                {% endif %}                
            </div>
        {% endif %}       
    </article>
</a>