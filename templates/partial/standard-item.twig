
<a class="standard-item t-d-none"  href="{{item.cta['url']}}" target="{{item.cta['target']}}" title="{{item.title}}">
    <article  class="pos-rel ">
        {% if item.image %}
            <div class="image-container img-square pos-rel brdr-rds-20">
                <picture  class="img-cover display">
                {% set image = get_image(item.image) %}
                    <source
                    data-srcset="{{image.src('large')}}"
                    media="(max-width: 767px)" />
                    <img data-src="{{image.src('large')}}" src="{{image.src('medium')}}" alt="{{image.alt}}"   class="lazyload" width="{{image.src('large').width}}" height="{{image.src('large').height}}" />
                </picture> 
            </div>
        {% endif %}
        
        
        {% if item.title or item.text or item.cta %}
            <div class="text-container p-standard">
                
                {% if item.title %}
                    <h3 class="foc fs-32">{{item.title|capitalize}}</h3>
                {% endif %}
                {% if item.text %}
                    <div class="ft fs-18 hide-mobile default-text">
                        {{item.text}}
                    </div>
                {% endif %}
                
                {% if item.cta %}
                    <div class="ctas-container  ">
                        <button  class="standard-btn secondary foc fs-18  transition default-btn brdr-rds-20 min-width"  type="button"   >
                            {{item.cta['title']}}
                        </button>
                    </div>
                {% endif %}                
            </div>
        {% endif %}       
    </article>
</a>