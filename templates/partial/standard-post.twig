
<a class="standard-item t-d-none" href="{{item.link}}" target="_self" title="{{item.title}}">
    <article  class="pos-rel ">
        {% if item.thumbnail %}
            <div class="image-container img-square pos-rel brdr-rds-20">
                <picture  class="img-cover display">
                {% set image = get_image(item.thumbnail) %}
                    <source
                    data-srcset="{{image.src('large')}}"
                    media="(max-width: 767px)" />
                    <img data-src="{{image.src('large')}}" src="{{image.src('medium')}}" alt="{{image.alt}}"   class="lazyload" width="{{image.src('large').width}}" height="{{image.src('large').height}}" />
                </picture> 
            </div>
        {% endif %}
        
        
        <div class="text-container  p-standard brdr-rds-20">
            <h3 class="foc fs-32">{{item.title|capitalize}}</h3>
        
            <div class="ft fs-18 hide-mobile  default-text">
                <p>{{item.excerpt({
                            strip: true,
                            read_more: ""
                        })}}</p>
            </div>
            
            <div class="ctas-container  ">
                <button  class="standard-btn secondary foc fs-18 default-btn transition brdr-rds-20 min-width" type="button"   >
                    {{options.learn_more}}
                </button>
            </div>
                            
        </div>
            
    </article>
</a>